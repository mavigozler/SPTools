{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "tsc: build - tsconfig.json"
		},
		{
			"type": "shell",
			"command": "tsc",
			"args": [
				"--build", "--listEmittedFiles", "${workspaceFolder}/tsconfig.json"
			],
			"problemMatcher": [],
			"label": "tsc verbose build"
		},
		{
			"label": "PowerShell SPTTools build",
			"type": "shell",
			"command": "pwsh ${workspaceFolder}/build-Tools/buildSPToolsV2.ps1",
			"windows": {
				"command": "pwsh ${workspaceFolder}/build-Tools/buildSPToolsV2.ps1"
			},
			"args": [
				"-Env", "dev"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false,
				"group": "build"
			},
			"problemMatcher": []
		}
	]
}